    "@vitejs/plugin-react-swc": "^3.8.0",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "chromatic": "^11.27.0",
    "cross-env": "^7.0.3",
    "postcss": "^8.5.3",
    "storybook": "^8.6.4",
    "tailwindcss": "^4.0.12",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vite-tsconfig-paths": "^5.1.4"
  }
